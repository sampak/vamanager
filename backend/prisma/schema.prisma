generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Users {
  id              String         @id @default(uuid())   
  firstName             String  
  lastName         String     
  email String    @unique
  password String 
  allowShowLastName Boolean?       @default(false)
  status      users_status @default(ACTIVE)
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())
}

model Airports {
  id String @id @default(uuid())
  icao String
  name String
  country String
  lat Float
  lng Float  
  airlines Airlines[]
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now()) 
}
model Airlines {
  id String @id @default(uuid()) 
  name String @unique
  icao String @unique
  baseId String
  base Airports @relation(fields: [baseId], references: [id])
  balance Int
  joining_type joining_type @default(APPROVAL_NEEDED)
  options Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())  
}

enum joining_type {
  PUBLIC_ACCESS
  INVITATION_ONLY
  APPROVAL_NEEDED
}


enum users_status {
  ACTIVE
  NON_ACTIVE
  SUSPENDED
}
